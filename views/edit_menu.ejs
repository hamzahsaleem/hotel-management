<body>


 <div class="container">

    <div class = "row">
        
            <div class = "box" >
                <div class ="col-lg-2">
                </div>
                <h1 class = " col-lg-4">Hello <%=username%>!<h1>
                <div class ="col-lg-4">
                </div>
            
                <div class ="col-lg-2">
                    <form action="logout"  class = "form">
                    
                    <input type="submit" style="margin-top:-5px; margin-left:20px;" class="btn btn-info btn-lg text"  value="Logout"  />
                
                    </form>


                </div>


            </div>

        </div>




        <div class="row">
            <div class="box">
             <h2 class="intro-text text-center"><hr><strong>Edit Menu</strong><hr></h2>


             <div class="col-lg-4">

                <div class="table-title">
                <h2 class="intro-text text-center"><hr><strong>Breakfast Menu</strong><hr></h2>
                </div>
                <table class="table-fill">
                <thead>
                <tr>
                <th class="text-left">Dish</th>
                <th class="text-left">Price (RS.)</th>
                </tr>
                </thead>
                <tbody class="table-hover">
                
                <% menu.forEach(function(item){ %>

                        <%if(item.type=='Breakfast'){ %>

                        <tr>
                            <td><%=item.dish %></td>
                            <td><%=item.price %></td>
                        </tr>

                        <%}%>

                        <% }) %>

                </tbody>
                </table>
  
                </div>

                <div class="col-lg-4">

                <div class="table-title">
                 <h2 class="intro-text text-center"><hr><strong>Lunch Menu</strong><hr></h2>
                </div>
                <table class="table-fill">
                <thead>
                <tr>
                <th class="text-left">Dish</th>
                <th class="text-left">Price (RS.)</th>
                </tr>
                </thead>
                <tbody class="table-hover">
                
                <% menu.forEach(function(item){ %>

                        <%if(item.type=='Lunch'){ %>

                        <tr>
                            <td><%=item.dish %></td>
                            <td><%=item.price %></td>
                        </tr>

                        <%}%>

                        <% }) %>

                </tbody>
                </table>
  
                </div>

                <div class="col-lg-4">

                <div class="table-title">
                 <h2 class="intro-text text-center"><hr><strong>Dinner Menu</strong><hr></h2>
                </div>
                <table class="table-fill">
                <thead>
                <tr>
                <th class="text-left">Dish</th>
                <th class="text-left">Price (RS.)</th>
                </tr>
                </thead>
                <tbody class="table-hover">
                <% menu.forEach(function(item){ %>

                        <%if(item.type=='Dinner'){ %>

                        <tr>
                            <td><%=item.dish %></td>
                            <td><%=item.price %></td>
                        </tr>

                        <%}%>

                        <% }) %>
                </tbody>
                </table>
  
                </div>



            </div>
        </div>



        <div class="row">
            <div class="box">
             <h2 class="intro-text text-center"><hr><strong>Special Deals</strong><hr></h2>

            <%var i =0%>
            <% dealsArray.forEach(function(item){ %>
                
            
             <div class="col-lg-4">

             <div class="table-title">
             <h2 class="intro-text text-center"><hr><strong>Special Deal#<%=dealsPrices[i].id%>  Rs. <%=dealsPrices[i].price%></strong><hr></h2>
             
             </div>                        
             <table class="table-fill">
                <thead>
                    <tr>
                    <th class="text-left">Dish</th>
                    </tr>
                </thead>
                <tbody class="table-hover">

                         <% dealsArray[dealsPrices[i].id -1].forEach(function(item){ %>

                        <tr>
                            <td><%=item.dish %></td>
                        </tr>

                        <% }) %>

                </tbody>
            </table>
  
            </div>

            <%i = i+1%>
            <% }) %>

            </div>
        </div>



        <div class = "box" >
         <div class = "row">
        <form action="add_item" method="POST" class = "form">

           
                <label class="col-lg-1">Dish:</label>
                <input class="col-lg-2" required="true" minlength="3" placeholder="Dish name" name="dish"  />
       
           
                <label class="col-lg-2">Price in Rs:</label>
                <input class="col-lg-2" required="true" minlength="2" type = "number" placeholder="Price" name="price"  />

                <label class="col-lg-2">Select Type:</label>

                <select class="col-lg-2" required="true" style="color:#052483" name="type">
                        <option value="Breakfast" class="text" >Breakfast</option>
                        <option value="Lunch" class="text"  >Lunch</option>
                        <option value="Dinner" class="text"  >Dinner</option>
                </select>

            </div>
            <br />
             <div class = "row">
            <input type="submit" style = "margin-left: 35%;" class="btn btn-success btn-lg text col-sm-4"  value="Add"  />
           
        
        
        </form>
    </div>
    </div>



    <div class = "box" >
     <div class = "row">
        <form action="update_price" method="POST" class = "form">

           
                <label class="col-lg-1">Dish:</label>
                <select class="col-lg-2" name ="dish" required="true" style="color:#052483" >
                       

                        <% menu.forEach(function(item){ %>

                        <option value="<%=item.dish %>" class="text" ><%=item.dish %></option>
                        
                        <% }) %>
                        

                </select>
       
                <label class="col-lg-2" style="margin-left:20px;">Price (Rs):</label>
                <input class="col-lg-2" placeholder="Price" name="price" required="true" minlength="2" type = "number"   />

                
                
                <input type="submit" style="margin-top:-5px; margin-left:20px;" class="btn btn-success btn-md text col-lg-3"  value="Update Price"  />
                <div class ="col-lg-2">
                </div>
               
        
        </form>
    </div>
 </div>





    <div class = "box" >
     <div class = "row">
        <form action="update_price_deal" method="POST" class = "form">

           
                <label class="col-lg-1">Dish:</label>
                <select class="col-lg-2" name ="deal" required="true" style="color:#052483" >
                       

                        <% dealsPrices.forEach(function(item){ %>

                        <option value="<%=item.id %>" class="text" >Deal# <%=item.id %></option>
                        
                        <% }) %>
                        

                </select>
       
                <label class="col-lg-2" style="margin-left:20px;">Price (Rs):</label>
                <input class="col-lg-2" placeholder="Price" name="price" required="true" minlength="2" type = "number"   />

                
                
                <input type="submit" style="margin-top:-5px; margin-left:20px;" class="btn btn-success btn-md text col-lg-3"  value="Update Price"  />
                <div class ="col-lg-2">
                </div>
               
        
        </form>
    </div>
 </div>



