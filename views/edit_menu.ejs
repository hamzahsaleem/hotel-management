                </select>
       
                
                <input type="submit" style="margin-top:-5px; margin-left:20px;" class="btn btn-success btn-md text col-lg-3"  value="Delete Deal"  />
                <div class ="col-lg-2">
                </div>
               
        
        </form>
    </div>
